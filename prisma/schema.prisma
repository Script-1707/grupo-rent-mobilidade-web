generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



// Vehicle models for the 'viaturas' (cars) listing module
model Vehicle {
  id        Int              @id @default(autoincrement())
  make      String?
  model     String?
  year      Int?
  plate     String?          @unique
  pricePerDay Int?
  description String?
  destaque  String?
  features  VehicleFeature[]
  categoryId Int?
  category   Category?       @relation(fields: [categoryId], references: [id])
  createdAt DateTime         @default(now())
}

model VehicleFeature {
  id        Int     @id @default(autoincrement())
  text      String
  vehicleId Int
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  vehicles Vehicle[]
}
